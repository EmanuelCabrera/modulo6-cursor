						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/users/1",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"users",
								"1"
							]
						},
						"description": "Obtiene un usuario específico por ID (requiere autenticación)"
					},
					"response": []
				},
				{
					"name": "Get User by ID (Not Found)",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/users/999",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"users",
								"999"
							]
						},
						"description": "Prueba obtener un usuario que no existe"
					},
					"response": []
				}
			],
			"description": "Endpoints de gestión de usuarios (requieren autenticación)"
		},
